@model IEnumerable<pts2.Models.enquiry_info>

@{
    ViewBag.Title = "Index";
}


<section class="content-header"> </section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box" style="padding:20px;">
                <div class="box-header">
                    <h3 class="box-title">Inquiries</h3>
                    <button onclick="location.href='@Url.Action("Create", "enquiry_info")' ;return false;" class="btn btn-success pull-right">Add Inquiry</button>
                </div>
                <table id="example1" class="table table-striped table-bordered" cellspacing="0" style="width:100%;">
                 <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.client_info.firstname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.projectname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.source)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.remark1)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tag)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.client_info.firstname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.projectname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.source)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.remark1)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tag)
                                    <br />
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                                    
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        @Html.ActionLink("Delete", "DeleteConfirmed", "enquiry_info", new { id = item.Id }, new { onclick = "return confirm('Are you sure you wish to delete this inquiry?');" })
                                    }
                                    
                                    <!-- |
                                  @Html.ActionLink("Delete", "Delete", new { id = item.Id })--> 
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div></div></div></section>

<script>
    $(document).ready(function () {
        $('#example1').DataTable({
            "scrollX": true
            "order": [[0, "desc"]]
        });
    });
</script>